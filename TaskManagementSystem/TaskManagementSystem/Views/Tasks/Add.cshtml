@model TaskManagementSystem.Models.AddTaskViewModel

<h1>Add Task</h1>

<form method="post">

<div class="mt-3">
    <label class="form-label">Title</label>
    <input type="text" class="form-control" asp-for="Title" required/>
</div>

<div class="mt-3">
    <label class="form-label">Description</label>
    <input type="text" class="form-control" asp-for="Description" required/>
</div>

<div class="mt-3">
    <label class="form-label">DueDate</label>
    <input type="date" class="form-control" asp-for="DueDate" required/>
</div>

<div class="mt-3">
    <label class="form-label">Status</label>
    <select class="form-control" asp-for="Status">
        <option value="Pending">Pending</option>
        <option value="Completed">Completed</option>
    </select>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Add Task</button>
</div>

</form>